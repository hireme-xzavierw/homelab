# Log when an outside source hits the vpn port on admin networks
alert ip [!$SPAWN,!$SISTER,!$VPN] any -> $SPAWN $VPORT (msg:"Inbound traffic from unfamiliar source on vpn port";classtype:bad-unknown;flow:not_established;sid: 50000001;rev:1;)

# Log when an internal source hits the vpn port on admin networks
alert ip [$SPAWN,$SISTER,$VPN] any -> $SPAWN $VPORT (msg:"Inbound traffic from familiar source on vpn port";classtype:bad-unknown;flow:not_established;sid: 50000002;rev:1;)

